<div class="row well">
<div class="col-sm-2">
  <%= render 'votes/votes', votes: idea.votes %>
  <% unless Vote.has_voted?(current_user,idea) %>
   <%= render 'votes/form', idea: idea %>
   <%else%>
      <p>Allready Voted</p>
   <%end%>
</div>
<div class="col-sm-10">
<div class="row">
  <div class="col-sm-10">
      <h3><%= link_to idea.question, idea%></h3>
  </div>
  <div class="col-sm-2">
    <%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-default' if can? :update, idea %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= idea.explanation %>
  </div>
</div>
</div>


</div>
